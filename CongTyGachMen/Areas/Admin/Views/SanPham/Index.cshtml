@model IEnumerable<CongTyGachMen.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layout/LayoutQuanly.cshtml";
}

<h2>Sản Phẩm</h2>
<span style="color:red;">@ViewBag.Daxoa</span>
<p>
    @Html.ActionLink("Thêm mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaSp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongTon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DVT)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongTon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DVT)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Chinhsua", new { @MaSp = item.MaSp}) |
            @Html.ActionLink("Chi tiết", "Hienthi", new { @MaSp = item.MaSp}) |
            @Html.ActionLink("Xóa", "Delete", new { @MaSp = item.MaSp })
        </td>
    </tr>
}

</table>
